{
  "compilerOptions": {
    "target": "es2020", // or a more recent version
    "module": "commonjs", // or "esnext" for modules
    "outDir": "./dist", // Output directory for compiled JavaScript
    "rootDir": "./src", // Root directory for TypeScript source files
    "strict": true, // Enable strict type checking
    "esModuleInterop": true, // Enables interoperability between CommonJS and ES modules
    "skipLibCheck": true, // Skip type checking of declaration files
    "forceConsistentCasingInFileNames": true, // Enforces consistent casing in file names.
    "resolveJsonModule": true // allows to import json files as modules.
  },
  "include": ["src/**/*"], // Include all TypeScript files in the 'src' directory
  "exclude": ["node_modules"] // Exclude node_modules folder.
}